<!--pages/login/LoginPage.wxml-->
<view class="page">
  <view class='header'>
    <view class='avatar'></view>
    <view class='notice ripple'>欢迎回来</view>
  </view>

  <view class='body'>
    <input
      class='form-control' 
      maxlength="11" 
      focus="true"
      bindinput="bindPhoneInput"
      placeholder="请输入手机号码" />
  </view>

   <view class='body'>
    <input
      class='form-control' 
      maxlength="11" 
      focus="true"
      bindinput="bindPhoneInput"
      placeholder="请输入F" />
  </view>

  <view class='footer'>
    <view class='btn-login ripple' bindtap='doLogin'>
      <!-- 登陆 -->
      <view class="iconfont icon-arrowsrightline"></view>
    </view>
  </view>
</view>

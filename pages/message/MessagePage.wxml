<!--pages/message/MessagePage.wxml-->

<view class='page'>
  <view class='message-list-wrap' wx:if="{{dataSet.length > 0}}">
    <view class='message-item' wx:for="{{dataSet}}" wx:key="index">
      <view class='message-basic'>
        <view class='message-head-left'>
          <view class='message-avatar-wrap'>
            <image class="message-avatar" src="../../asset/img/org-cover.jpg" mode="scaleToFill"></image>
          </view>
          <view class='message-info'>
            <view class='message-title'>授课老师</view>
            <view class='message-org-name'>雅马哈音乐中心</view>
          </view>
        </view>

        <view class='message-date'>17-12-21 09:53</view>
      </view>

      <view class='message-introduce'>经常下课后与其他小朋友讨论，其他人有不会的…</view>

      <view class='message-receive'>“七七”在“噜噜唐课程”中收到老师评价</view>
    </view>
  </view>

  <view class='page-no-data' wx:else>
    <image class='page-no-data-img' src="../../asset/img/message_empty.png"></image>
    <view class='page-no-data-text'>暂无消息</view>
    <view class='page-no-data-btn ripple' bindtap='toggleData'>查看消息</view>
  </view>
</view>
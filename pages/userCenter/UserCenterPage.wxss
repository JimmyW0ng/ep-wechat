/* pages/userCenter/UserCenterPage.wxss */

.userCenter-header {
  padding: 40px 20px;
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
}

.avatar-list-wrap {
  position: relative
}

.btn-add {
  display: inline-block;
 background: #fff;
  width: 80px;
  height: 80px;
  border-radius: 80px;
  line-height: 80px;
  box-shadow: 0 0 10px #E9E9E9;
  text-align: center;
}

.text-add {
  margin-top: 20px;
}

.icon-plus1 {
  font-size: 24px;
  color: #5EE495;
}

.userCenter-body {
  border-top: 1px solid #e9e9e9;
    border-bottom: 1px solid #e9e9e9;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.userCenter-body-item {
     text-align: center;
    width: 50%;
    padding: 20px;
    box-sizing: border-box;
}
.userCenter-body-item.border-right{
    border-right: 1px solid #e9e9e9;
}

.body-text {
font-size: 14px;
color: #7D8794;
line-height: 14px;
margin-top: 5px;
}

.userCenter-footer {
  padding: 25px 20px;
}

.footer-title {
font-size: 16px;
color: #1E293C;
line-height: 14px;
}

.footer-empty {
  padding: 50px 0;
  text-align: center;
}

.img-empty {
  display: inline-block;
  width: 70px;
}

.org-cover {
  width: 70px;
  height: 60px;
}

.text-empty {
  font-size: 16px;
color: #A4AFBF;
line-height: 14px;
margin: 20px;
}

.btn-empty {
  display: inline-block;
border: 1px solid #5EE495;
color: #5EE495;
border-radius: 4px;
text-align: center;
padding: 10px 20px;
font-size: 14px;

}
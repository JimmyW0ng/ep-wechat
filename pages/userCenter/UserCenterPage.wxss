/* pages/userCenter/UserCenterPage.wxss */

.userCenter-header {
  padding: 40px 20px 20px;
}

.userCenter-header-top {
  display: flex;
  justify-content: space-between;
  height: 85px;
}

.userCenter-header-top.no-data {
  display: block;
  text-align: center;
}

.userCenter-header-bottom {
  margin-top: 15px;
}

.userCenter-header-bottom.no-data{
  height: 30px;
}

.btn-logout {
 position: absolute;
  top: 10px;
  right: 10px;
  font-size: 14px;
  color: #7d8794;
}

.child-name {
  font-size: 20px;
  color: #1e293c;
  line-height: 20px;
  height: 20px;
}

.child-school {
  font-size: 14px;
  color: #7d8794;
  line-height: 14px;
  height: 14px;
  margin-top: 8px;
}

.child-sign {
  height: 14px;
  font-size: 14px;
  color: #1e293c;
  line-height: 14px;
  margin-top: 15px;
}

.avatar-list-wrap {
  position: relative;
}

.btn-add {
  display: inline-block;
  background: #fff;
  width: 80px;
  height: 80px;
  border-radius: 80px;
  line-height: 80px;
  box-shadow: 0 0 10px #e9e9e9;
  text-align: center;
}

.text-add {
   margin-top: 5px; 
}

.icon-plus1 {
  font-size: 24px;
  color: #5ee495;
}

.userCenter-body {
  border-top: 1px solid #e9e9e9;
  border-bottom: 1px solid #e9e9e9;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.userCenter-body-item {
  text-align: center;
  width: 50%;
  padding: 20px;
  box-sizing: border-box;
}

.userCenter-body-item.border-right {
  border-right: 1px solid #e9e9e9;
}

.body-text {
  font-size: 14px;
  color: #7d8794;
  line-height: 14px;
  margin-top: 5px;
}

.userCenter-footer {
  padding: 20px;
}

.footer-title {
  font-size: 16px;
  color: #1e293c;
  line-height: 14px;
}

.footer-empty {
  padding: 50px 0;
  text-align: center;
}

.img-empty {
  display: inline-block;
  width: 70px;
}

.org-cover {
  width: 70px;
  height: 60px;
}

.text-empty {
  font-size: 16px;
  color: #a4afbf;
  line-height: 14px;
  margin: 20px;
}

.btn-empty {
  display: inline-block;
  border: 1px solid #5ee495;
  color: #5ee495;
  border-radius: 4px;
  text-align: center;
  padding: 10px 20px;
  font-size: 14px;
}

.comment-item {
  border-bottom: 1px solid #e9e9e9;
  padding: 20px 0;
}

.teacher-basic {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.teacher-basic .left {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.teacher-basic .comment-date {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.teacher-avatar {
  display: inline-block;
  width: 50px;
  height: 50px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 50px;
}

.teacher-title {
  font-size: 14px;
  color: #1e293c;
  line-height: 14px;
  margin-bottom: 5px;
}

.teacher-name {
  font-size: 12px;
  color: #7d8794;
  line-height: 12px;
}

.teacher-introduce {
  margin-top: 10px;
  font-size: 14px;
  color: #1e293c;
  line-height: 22px;
}

.btn-history-back {
  position: fixed;
  bottom: 50px;
  right: 20px;
  width: 40px;
  height: 40px;
  border-radius: 40px;
  line-height: 40px;  
  text-align: center;
  z-index: 2;
  box-shadow: 0 0 3px #aaa; 
  overflow: hidden;
}

.btn-history-back .course-main-url {
  width: 40px;
  height: 40px;
}
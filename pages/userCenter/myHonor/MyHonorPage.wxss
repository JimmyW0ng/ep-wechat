/* pages/userCenter/myHonor/MyHonorPage.wxss */

.page {
  padding: 20px;
}

.honor-list-wrap {
}

.honor-item {
  width: 50%;
  position: relative;
  float: left;
  margin-bottom: 30px;
  box-sizing: border-box;
}

.honor-item.even {
  /* background: red; */
  padding-right: 10px;
}
.honor-item.odd {
  /* background: orange; */
   padding-left: 10px; 
}

.honor-item.odd .ribbon-wrap {
  left: 20px;
}

.avatar-wrap {
  height: 150px;
  overflow: hidden;
  font-size: 0;
  margin-bottom: 8px;
}
.avatar {
   width: 100%;
   height: 150px;
  max-width: 100%;
}

.ribbon-wrap {
  position: absolute;
  top: -8px;
  left: 10px;
}

.ribbon {
  width: 32px;
  height: 54px;
}

.course-name {
  font-size: 14px;
  color: #1e293c;
  line-height: 14px;
  margin-bottom: 8px;
}

.org-name {
  font-size: 12px;
  color: #7d8794;
  line-height: 12px;
  margin-bottom: 8px;
}

.honor-date {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
  margin-bottom: 8px;
}

.page-no-data-img {
  width: 46px;
  height: 75px;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 2;
}

.modal-container{
  width: 280px;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius: 10px;
 z-index: 3;
  
}
.modal-header ,.modal-header-img  {
    width: 280px;
    height: 126px;
}

.modal-body {
  padding: 20px;
}
.title {
  font-size: 18px;
color: #1E293C;
margin-bottom: 20px;
}
.content{
  font-size: 14px;
color: #1E293C;margin-bottom: 20px;
}
.notice {
  text-align: right;
  font-size: 12px;
color: #A4AFBF;
line-height: 16px;
}

.modal-footer{
  padding: 0 20px 30px;
}
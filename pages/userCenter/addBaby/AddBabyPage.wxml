<!--pages/userCenter/addBaby/AddBabyPage.wxml-->
<view class='page'>
  <view class='form-control'>
    <view class='label'>宝宝头像</view>

    <view class='input-wrap'>
      <input placeholder='点击上传头像' />
    </view>
  </view>

  <view class='form-control'>
    <view class='label'>宝贝昵称</view>

    <view class='input-wrap'>
      <input placeholder='请输入宝贝昵称' />
    </view>
  </view>

  <view class='form-control'>
    <view class='label'>宝贝生日</view>

    <view class='input-wrap'>
      <!-- <input placeholder='请选择出生日期' /> -->
      <view class="section">
        <!-- <view class="section__title">请选择出生日期</view> -->
        <picker mode="date" value="{{date}}" start="2015-09-01" end="{{today}}" bindchange="bindDateChange">
          <view class="picker">
            <view wx:if="{{!date}}">请选择出生日期 </view>{{date}}
          </view>
        </picker>
      </view>

    </view>
  </view>

  <view class='form-control'>
    <view class='label'>宝贝性别</view>

    <view class='input-wrap'>
      <input placeholder='请选择性别' />
    </view>
  </view>
  <view class='form-control'>
    <view class='label'>所在学校</view>

    <view class='input-wrap'>
      <input placeholder='请输入所在学校' />
    </view>
  </view>
  <view class='form-control'>
    <view class='label'>所在年级</view>

    <view class='input-wrap'>
      <input placeholder='请选择年级' />
    </view>
  </view>
  <view class='form-control'>
    <view class='label'> 小目标</view>

    <view class='input-wrap'>
      <input placeholder='请输入小目标' />
    </view>
  </view>

  <button class='btn-save ripple'>保存</button>
</view>
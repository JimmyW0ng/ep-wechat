<!--pages/userCenter/UserCenterPage.wxml-->

<view class='page'>
  <view class='userCenter-header'>
    <view class='userCenter-header-top'>
      <view class='avatar-list-wrap' wx:if="{{children.length > 0}}">
        <avatar-selector bind:clickItem="goBabyDetail" bind:changeItem="changeBaby" activeIndex="{{activeIndex}}" list="{{children}}"></avatar-selector>
      </view>

      <view class='btn-add-wrap'>
        <view class='btn-add ripple'>
          <view class='iconfont icon-plus1' bindtap='goAddBaby'></view>
        </view>
        <view class='text-add' wx:if="{{children.length == 0}}" bindtap='goAddBaby'>添加宝贝信息</view>
      </view>
    </view>

    <view class='userCenter-header-bottom'>
      <view class='child-school' wx:if="selectedChild.childNickName">{{selectedChild.childNickName}}</view>
      <view class='child-sign text-ellipsis' wx:if="selectedChild.sign">{{selectedChild.sign}}</view>
    </view>
  </view>

  <view class='userCenter-body'>
    <view class='userCenter-body-item border-right ripple' bindtap='goMyCourse'>
      <view class='body-num'>{{selectedChild.totalOrder || 0}}</view>
      <view class='body-text'>我的课程</view>
    </view>
    <view class='userCenter-body-item ripple' bindtap='goMyHonor'>
      <view class='body-num'>{{selectedChild.totalHonor || 0}}</view>
      <view class='body-text'>奖状墙</view>
    </view>
  </view>

  <view class='userCenter-footer'>
    <view class='footer-title'>评价（0）</view>

    <view class='footer-empty'>
      <view class='img-empty'>
        <image class='org-cover' src="../../asset/img/comment_empty.png" mode="scaleToFill"></image>
      </view>
      <view class='text-empty'>暂无报名课程，去看看吧</view>

      <view class='btn-empty ripple'>查看课程</view>
    </view>

  </view>
</view>
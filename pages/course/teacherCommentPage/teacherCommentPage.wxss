.comment-list {
  padding-bottom: 50px;
}
.comment-item {
  padding-top: 20px;
  padding-left: 20px;
  border-bottom: 1px solid #e9e9e9;
}

.class-info {
  padding-right: 20px;
  padding-bottom: 15px;
}

.class-info-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
  align-items: center;
}

.top-left {
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
}

.top-right {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.class-info-bottom {
  font-size: 14px;
  color: #7d8794;
  line-height: 14px;
}

.comment-info {
  padding: 12px 20px 20px 0;
  padding-left: 0;
}

.title-teacher {
  font-size: 14px;
  color: #2ad5f3;
  line-height: 20px;
}

.title-child {
  font-size: 14px;
  color: #5ee495;
  line-height: 20px;
}

.content {
  font-size: 14px;
  color: #000;
  line-height: 20px;
}

.child-comment {
  margin-top: 15px;
}

.no-child-comment {
  font-size: 14px;
  color: #5ee495;
  line-height: 14px;
  margin-top: 15px;
}

.replay-modal-container {
  background: #fff;
  width: 100%;
  margin: 0 auto;
  z-index: 3;
  position: fixed;
  bottom: 0px;
  box-sizing: border-box;
}
.replay-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 2;
}

.replay-modal-body {
  padding-left: 15px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 15px;
}

.replay-input {
  height: 40px;
  line-height: 40px; 
  flex: 1;
}

.replay-btn {
  font-size: 15px;
  color: #5ee495;
  padding: 0 15px;
}
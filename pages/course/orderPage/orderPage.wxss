/* pages/course/joinSuccess/joinSuccess.wxss */

page {
  padding-bottom: 100rpx;
}

.page-title {
  padding: 80rpx 0 30rpx;
  text-align: center;
  font-size: 50rpx;
}

.top-container {
  text-align: center;
  border-bottom: 1px solid #eee;
  padding: 30rpx 30rpx 70rpx;
}

.notice {
  margin-bottom: 50rpx;
  font-size: 30rpx;
}

.btn-wrap {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.btn-primary {
  width: auto;
  padding: 14px;
}

.info-wrap {
}

.info-title {
  padding: 15px 30px;
  font-size: 40rpx;
  text-align: center;
  color: #333;
  border-bottom: 1px solid #eee;
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px;
  border-bottom: 1px solid #eee;
  font-size: 32rpx;
}

.info-item .right {
  max-width: 70%;
  color: #666;
  display: flex;
  align-items: center;
}

.info-wrap .avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}

/* pages/course/evaluatePage/EvaluatePage.wxss */
.page {
  padding-bottom: 100px;
}
.star-wrap {
  width: 80%;
  margin: 0 auto;
  padding: 30px 0;
  box-sizing: border-box;
} 

.notice {
  font-size: 12px;
color: #A4AFBF;
line-height: 12px;
text-align: center;
margin-top: 15px;
}

.eval-textarea {
  width: 100%;
  display: inline-block;
  box-sizing: border-box;
  padding: 15px 20px;
  font-size: 16px;
color: #A4AFBF;
border-top: 1px solid #E9E9E9;
border-bottom:  1px solid #E9E9E9;
}

.image-list-wrap {
  padding-top: 20px;
  box-sizing: border-box;
}

.image-item {
  border: 1px solid #e9e9e9;
  display: inline-block;
  width: 80px;
  height: 80px;
  margin-left: 15px;
  margin-bottom: 15px;
  box-sizing: border-box;
  position: relative;
}

.image-item .iconfont {
  position: absolute;
  font-size: 20px;
  top: -10px;
  right: -10px;
  color: #999;
}


.uploaded-img {
  display: inline-block;
  width: 80px;
  height: 80px;
}

.upload-btn {
   display: inline-block;
  width: 80px;
  height: 80px;
  margin-left: 15px;
  margin-bottom: 15px;
  text-align: center;
  color: #5EE495;
  border:  1px solid #5EE495;
  padding-top: 20px;
  box-sizing: border-box;
}

.upload-btn .iconfont {
  font-size: 20px;
}

.upload-btn-text {
  font-size: 14px;
}

.footer-btn-wrap {
  padding: 20px;
  margin-top: 30px;
}
.footer-btn {
  background-image: linear-gradient(90deg, #5ee495 0%, #2ad5f3 100%);
  box-shadow: 0 4px 16px 0 rgba(164, 175, 191, 0.30);
  border-radius: 4px;
  font-size: 16px;
  color: #fff;
  line-height: 16px;
  padding: 14px 40px;
  text-align: center;
}

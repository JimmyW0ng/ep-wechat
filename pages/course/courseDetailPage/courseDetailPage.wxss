/* pages/course/courseDetailPage/courseDetailPage.wxss */

.page {
  padding: 20px 0;
}

swiper-item{
  overflow-y: scroll;
}

.course-list-item {
  display: flex;
  align-items: top;
  justify-content: space-between;
  padding: 5px 0;
   margin-bottom: 10px; 
  padding-left: 20px;
}

.course-avatar {
  display: inline-block;
  width: 80px;
  height: 80px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 4px;
}

.course-info {
  flex: 1;
}

.course-org-name {
  color: #1e293c;
  line-height: 14px;
  margin-bottom: 8px;
  margin-top: 3px;
  font-size: 16px;
}

.course-tag {
  font-size: 12px;
  padding: 2px 6px;
  background: #5ee495;
  border-radius: 4px;
  color: #fff;
}

.course-name {
  font-size: 12px;
  color: #7d8794;
  line-height: 12px;
  margin-left: 10px;
}

.course-simple-info {
  display: flex;
  align-items: center;
}

.course-bottom-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.course-note {
  font-size: 12px;
  color: #1e293c;
  line-height: 18px;
}

.course-price {
  font-size: 18px;
  color: #000;
  line-height: 18px;
}

.course-learn-num {
  font-size: 14px;
  color: #a4afbf;
  line-height: 14px;
}

.tab-header {
  display: flex;
  justify-content: space-between;
  text-align: center;
  border-bottom: 1px solid #e9e9e9;
  box-sizing: border-box;
  height: 50px;
}

.tab-selector {
  font-size: 14px;
  color: #1e293c;
  height: 50px;
  line-height: 50px;
  box-sizing: border-box;
  flex: 1;
}

.tab-selector.active {
  color: #5ee495;
  border-bottom: 2px solid #5ee495;
}

.tab-content {
  padding: 20px;
  padding-right: 0;
}

.tab-content-title {
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.course-introduce {
  padding-right: 20px;
}

.tab-join-notice {
  font-size: 12px;
  color: #a4afbf;
  line-height: 18px;
}

.title-info {
  font-size: 12px;
  color: #a4afbf;
  line-height: 16px;
  margin-left: 5px;
}

.teacher-basic {
  display: flex;
  align-items: center;
}

.teacher-item {
  border-bottom: 1px solid #e9e9e9;
  padding: 20px 0;
  padding-right: 20px;
}

.teacher-avatar {
  display: inline-block;
  width: 50px;
  height: 50px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 50px;
}

.teacher-title {
  font-size: 14px;
  color: #1e293c;
  line-height: 20px;
}

.teacher-name {
  font-size: 16px;
  color: #000;
  line-height: 20px;
}

.teacher-introduce {
  margin-top: 10px;
  font-size: 14px;
  color: #1e293c;
  line-height: 22px;
}

.comment-item {
  border-bottom: 1px solid #e9e9e9;
  padding: 20px 0;
  padding-right: 20px;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.child-avatar {
  display: inline-block;
  width: 50px;
  height: 50px;
  border-radius: 50px;
  overflow: hidden;
  background: red;
  margin-right: 12px;
}

.child-name {
  margin-right: 12px;
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
}

.child-chosenFlag {
}

.comment-body {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #7d8794;
}

.comment-body-item {
  margin-right: 15px;
}

.comment-footer {
  margin-top: 10px;
  font-size: 14px;
  color: #1e293c;
  line-height: 22px;
}

.comment-check-all {
  padding: 15px 0;
  padding-right: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e9e9e9;
}

.check-all-text {
  font-size: 14px;
  color: #5ee495;
  line-height: 16px;
}

.check-all-icon {
  color: #e9e9e9;
}

.course-detail-footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 58px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.20);
  padding: 0 20px;
  box-sizing: border-box;
  z-index: 10;
  background: #fff;
}

.icon-phone {
  color: #5ee495;
  font-size: 20px;
}

.footer-name {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.footer-center {
  /* width: 40%; */
}

.footer-price {
  font-size: 18px;
  color: #000;
  line-height: 20px;
}

.footer-join-number {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.footer-right {
  text-align: right;
}

.footer-btn {
  background-image: linear-gradient(90deg, #5ee495 0%, #2ad5f3 100%);
  box-shadow: 0 4px 16px 0 rgba(164, 175, 191, 0.30);
  border-radius: 4px;
  font-size: 16px;
  color: #fff;
  line-height: 16px;
  padding: 14px 40px;
  text-align: center;
}

.join-container {
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
  max-height: 70%;
  overflow-y:scroll; 
}

.join-title {
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
  margin: 5px 0;
}

.date-list {
  padding: 15px 0;
}

.date-btn {
  border-radius: 4px;
  display: inline-block;
  padding: 10px 15px;
  transition: all 0.5s ease;
  border: 1px solid #7d8794;
  font-size: 14px;
  color: #7d8794;
  line-height: 14px;
  margin-right: 10px;
  margin-bottom: 10px;
  box-sizing: border-box;
}

.date-btn.active {
  background: #5ee495;
  color: #fff;
  border: 1px solid #5ee495;
}

.baby-list {
  margin-bottom: 15px;
  margin-top: 10px;
}
.baby-list-item 
{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e9e9e9;
  padding: 10px 0;
}
.baby-list-item .joined-text {
  color: #999;
}
.baby-info {
  display: flex;
  align-items: center;
}
.item-avatar {
  width: 40px;
  height: 40px;
  border-radius: 40px;
  display: inline-block;
  margin-right: 12px;
}
.item-name {
  font-size: 16px;
color: #1E293C;
line-height: 16px;
}

.item-selector {
  color: #ddd;
  border: 1px solid #ddd;
  display: inline-block;
  width: 30px;
  height: 30px;
  border-radius: 30px;
  text-align: center;
  line-height: 30px;
  font-size: 18px;
  transition: all 0.5s ease;
}
.item-selector.active {
  background: #5ee495;
  color: #fff;
  border: 1px solid #5ee495
}
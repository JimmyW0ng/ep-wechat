/* pages/course/courseDetailPage/courseDetailPage.wxss */

.page {
  padding: 20px 0;
}

.course-list-item {
  display: flex;
  align-items: top;
  justify-content: space-between;
  padding: 5px 0;
  margin-bottom: 25px;
  padding-left: 20px;
}

.course-avatar {
  display: inline-block;
  width: 80px;
  height: 80px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 4px;
}

.course-info {
  flex: 1;
}

.course-org-name {
  color: #1e293c;
  line-height: 14px;
  margin-bottom: 8px;
  margin-top: 3px;
  font-size: 16px;
}

.course-tag {
  font-size: 12px;
  padding: 2px 6px;
  background: #5ee495;
  border-radius: 4px;
  color: #fff;
}

.course-name {
  font-size: 12px;
  color: #7d8794;
  line-height: 12px;
  margin-left: 10px;
}

.course-simple-info {
  display: flex;
  align-items: center;
}

.course-bottom-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.course-note {
  font-size: 12px;
  color: #1e293c;
  line-height: 18px;
}

.course-price {
  font-size: 18px;
  color: #000;
  line-height: 18px;
}

.course-learn-num {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.tab-header {
  display: flex;
  justify-content: space-between;
  text-align: center;
  border-bottom: 1px solid #e9e9e9;
  box-sizing: border-box;
  height: 50px;
}

.tab-selector {
  font-size: 14px;
  color: #1e293c;
  height: 50px;
  line-height: 50px;
  box-sizing: border-box;
  flex: 1;
}

.tab-selector.active {
  color: #5ee495;
  border-bottom: 2px solid #5ee495;
}

.tab-body {
  padding: 20px;
}

.tab-content {
}

.tab-content-title {
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.course-introduce {
}

.tab-join-notice {
  font-size: 12px;
  color: #a4afbf;
  line-height: 18px;
}

.title-info {
  font-size: 12px;
  color: #a4afbf;
  line-height: 16px;
  margin-left: 5px;
}

.class-item {
  display: flex;
  justify-content: space-between;
  padding: 20px 0;
  border-bottom: 1px solid #e9e9e9;
}

.class-name {
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
  margin-bottom: 8px;
}

.class-date {
  font-size: 14px;
  color: #a4afbf;
  line-height: 14px;
}

.class-courseNum {
  font-size: 14px;
  color: #1e293c;
}

.teacher-basic {
  display: flex;
  align-items: center;
}

.teacher-item {
  border-bottom: 1px solid #e9e9e9;
  padding: 20px 0;
}

.teacher-avatar {
  display: inline-block;
  width: 50px;
  height: 50px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 50px;
}

.teacher-title {
  font-size: 14px;
  color: #1e293c;
  line-height: 20px;
}

.teacher-name {
  font-size: 16px;
  color: #000;
  line-height: 20px;
}

.teacher-introduce {
  margin-top: 10px;
  font-size: 14px;
  color: #1e293c;
  line-height: 22px;
}

.course-detail-footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 58px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.20);
  padding: 0 20px;
  box-sizing: border-box;
}

.icon-phone {
  color: #5ee495;
  font-size: 20px;
}

.footer-name {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.footer-center {
  /* width: 40%; */
}

.footer-price {
  font-size: 18px;
  color: #000;
  line-height: 20px;
}

.footer-join-number {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.footer-right {
  text-align: right;
}

.footer-btn {
  background-image: linear-gradient(90deg, #5ee495 0%, #2ad5f3 100%);
  box-shadow: 0 4px 16px 0 rgba(164, 175, 191, 0.30);
  border-radius: 4px;
  font-size: 16px;
  color: #fff;
  line-height: 16px;
  padding: 14px 40px;
}

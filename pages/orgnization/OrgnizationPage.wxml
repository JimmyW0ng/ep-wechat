<!--pages/orgnization/OrgnizationPage.wxml-->
<view class='page'>
  <view class='title'>
    精选培训机构
  </view>
  <view class='card-orgnization' wx:for="{{dataSet}}" wx:key="index" bindtap='handleGoDetail'>
    <view class='avatar-wrap'>
      <image class='avatar' src="{{item.fileUrl}}" mode="aspectFill"></image>
    </view>
    <view class='basic-info'>
      <view class='top'>
        <view class='top-left'>
          <view class='org-name'>{{item.organName}}</view>
          <view class='org-address'>{{item.organAddress}}</view>
        </view>
        <view class='top-right'>
          <view class='point-wrap'>TODO {{item.togetherScore}}</view>
        </view>
      </view>
      <view class='bottom'>
        <view class='bottom-left'>
          <view class='tag-list'>
            <view class='tag' wx:for="{{item.catalogLabelFormat}}" wx:for-item="tag" wx:key="index">
              {{tag}}
            </view>
          </view>
        </view>
        <view class='bottom-right'>
          <view class='learn-num'>已有{{item.totalParticipate}}人学习</view>
        </view>
      </view>
    </view>
  </view>
</view>
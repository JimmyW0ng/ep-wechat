/* pages/orgnization/orgnizationDetail/OrganizationDetailPage.wxss */

.org-cover {
  width: 100%;
}

.swiper {
  height: 200px;
}

.org-detail-wrap {
  padding-left: 20px;
}

.basic-info {
  padding: 15px 20px 15px 0;
  display: flex;
  justify-content: space-between;
  align-items: top;
  border-bottom: 1px solid #e9e9e9;
}

.org-name {
  font-size: 18px;
  color: #1e293c;
  letter-spacing: 0;
  line-height: 20px;
  margin-bottom: 15px;
}

.basic-count {
  display: flex;
  align-items: center;
}

.org-talk {
  font-size: 12px;
  color: #a4afbf;
  letter-spacing: 0;
  line-height: 12px;
  margin-left: 15px;
  position: relative;
  top: 2px;
}

.org-avatar-wrap {
  display: inline-block;
  width: 45px;
  height: 45px;
  border-radius: 45px;
  overflow: hidden;
}

.org-slogan {
  font-size: 14px;
  color: #7d8794;
  letter-spacing: 0;
  line-height: 18px;
  margin-top: 12px;
}

.contact-info {
  padding: 15px 20px 15px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e9e9e9;
}

.contact-left {
  display: flex;
  align-items: center;
}

.contact-right {
  margin-left: 15px;
}

.icon-address {
  margin-right: 5px;
  color: #7d8794;
}

.org-address {
  font-size: 14px;
  color: #1e293c;
  letter-spacing: 0;
  line-height: 16px;
}

.icon-phone {
  color: #5ee495;
  font-size: 22px;
}

.introduce-info {
  padding: 15px 20px 15px 0;
  border-bottom: 1px solid #e9e9e9;
}

.introduce-title {
  font-size: 16px;
  color: #1e293c;
  letter-spacing: 0;
  line-height: 16px;
  margin-top: 5px;
  margin-bottom: 15px;
}

.introduce-content {
  font-size: 12px;
  color: #7d8794;
  line-height: 18px;
  margin-bottom: 5px;
}

.btn-checkMore {
  color: #5ee495;
  text-align: right;
  /* display: inline-block; */
}

.org-course-wrap {
  margin-bottom: 50px;
  padding: 15px 20px;
}

.course-wrap-title {
  font-size: 16px;
  color: #1e293c;
  letter-spacing: 0;
  line-height: 16px;
  margin-top: 5px;
  margin-bottom: 15px;
}

.course-list-item {
  display: flex;
  align-items: top;
  justify-content: space-between;
  padding: 5px 0;
  margin-bottom: 25px;
  position: relative;
  overflow: hidden;
}

.course-avatar {
  display: inline-block;
  width: 80px;
  height: 80px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 4px;
}

.course-info {
  flex: 1;
}

.course-org-name {
  font-size: 14px;
  color: #1e293c;
  line-height: 16px;
}

.course-tag-wrap {
  margin-top: 5px;
  display: flex;
  align-items: center;
}
.course-tag {
  font-size: 12px;
  padding: 0 6px;
  height: 22px;
  line-height: 22px;
  background: #5ee495;
  border-radius: 4px;
  color: #fff;
  display: inline-block;
  margin-right: 10px;
}

.vip-name{
  font-size: 12px;
  padding:0 16px 0 6px;
  border-radius: 4px 0 0 4px;
  height: 22px;
  line-height: 22px;
  background: orangered;
  color: #fff;
  display: inline-block;
  margin-right: 5px;
  position: relative;
  overflow: hidden;
}

.vip-name::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  display: inline-block;
      width:0; 
    height:0; 
    border-top:11px solid transparent;
    border-bottom:11px solid transparent; 
    border-right:8px solid #fff; 
}

.course-name {
  font-size: 12px;
  color: #7d8794;
  line-height: 15px;
  margin-top: 5px;
}

.course-simple-info {
  display: flex;
  align-items: center;
}

.course-bottom-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15px;
}

.course-price {
  font-size: 18px;
  color: #000;
  line-height: 18px;
}

.course-learn-num {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.course-list-item .ribbon {
  display: inline-block;
  position: absolute;
  top: -11px;
  left: -22px;
  padding: 2px;
  background: #58b7ef;
  color: #fff;
  font-size: 12px;
  width: 110px;
  text-align: center;
  -webkit-transform: rotate(-40deg) translate(-25px);
  -ms-transform: rotate(-40deg) translate(-25px);
  transform: rotate(-40deg) translate(-25px);
}

.course-list-item .ribbon.training {
  background: orange;
}
.course-list-item .ribbon.activity {
  background: #58b7ef;
}

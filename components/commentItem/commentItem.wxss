/* components/commentItem/commentItem.wxss */

.comment-item {
  border-bottom: 1px solid #e9e9e9;
  padding: 20px 0;
  padding-right: 20px;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.child-avatar {
  display: inline-block;
  width: 50px;
  height: 50px;
  border-radius: 50px;
  overflow: hidden;
  background: #999;
  margin-right: 12px;
}

.child-name {
  margin-right: 12px;
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
}

.child-chosenFlag {
  display: inline-block;
  width: 16px;
  height: 27px;
}

.comment-body {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #7d8794;
}

.comment-body-item {
  margin-right: 15px;
}

.comment-footer {
  margin-top: 10px;
  font-size: 14px;
  color: #1e293c;
  line-height: 22px;
}
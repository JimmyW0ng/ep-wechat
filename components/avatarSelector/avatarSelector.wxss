/* components/avatarSelector/avatarSelector.wxss */

.scroll-view{
  box-sizing: border-box;
}

.avatar-container{
  width: 100%;
}

.avatar-item {
  display: inline-block;
  width: 80px;
  height: 80px;
  border-radius: 80px;
   border: 1px solid #e9e9e9; 
  overflow: hidden;
  box-sizing: border-box;
   transition: all 0.2s ease-in-out;
   position: absolute;
}

.avatar-item.active {
  transform: scale(1.1);
  box-shadow: 0 0 10px black;
  z-index: 10;
}

.avatar {
   width: 80px; 
  height: 80px; 
   border-radius: 80px;  
}


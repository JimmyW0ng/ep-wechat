/* components/avatarSelector/avatarSelector.wxss */

.scroll-view{
   height: 120px; 
   line-height: 120px; 
  border: 1px solid #e9e9e9;
  padding: 20px 0;
  box-sizing: border-box;
}

.avatar-container{
  width: 100%;
  text-align: center;
}

.avatar-item {
  display: inline-block;
  width: 80px;
  height: 80px;
  border-radius: 80px;
  /* border: 1px solid #e9e9e9; */
  overflow: hidden;
  box-sizing: border-box;
   transition: all 0.2s ease-in-out;
   position: absolute;
}

.avatar-item.active {
  transform: scale(1.1);
  box-shadow: 0 0 5px black;
  z-index: 10
}

.avatar {
   width: 80px; 
  height: 80px; 
   border-radius: 80px;  
}


<view class="scroll-view" bindtouchstart="handlerStart" catchtouchmove="handlerMove" bindtouchcancel="handlerCancel" bindtouchend="handlerEnd">
  <view class='avatar-container'>
    <view class="avatar-item {{index == activeIndex && 'active'}}"    style="left: {{(30 * index)}}px; z-index: {{index == activeIndex ? '10' : children.length - index}}" wx:for="{{list}}" wx:key="index"
    bindtap='onTap'
    data-index="{{index}}"
    data-id="{{item.id}}"
    >
      <image class="avatar" 
      src="{{item.avatar ? item.avatar : '../../asset/img/avatar-man.png'}}" mode="scaleToFill"></image>
      <view class='basic-info'>萧山三小,2年级 TODO</view>
      <view class='sign'>过年前学会用吉他弹奏“天空之城”</view>
    </view>
  </view>
</view>
/**app.wxss**/
@import './asset/style/iconfont.wxss';
@import './asset/style/ripple-effect.wxss';
@import './asset/style/toolkit.wxss';
@import "./utils/wxParse/wxParse.wxss";
@import "./zanui/index.wxss";

page {
  background: #fff;
}

.page-no-data {
  text-align: center;
  position: fixed;
  top: 50%;
  left: 50%;
  width: 80%;
  transform: translate(-50%, -50%);
}

.page-no-data-img {
  display: inline-block;
  width: 61px;
  height: 51px;
}

.page-no-data-text {
  font-size: 16px;
  color: #a4afbf;
  margin: 20px 0;
}

.page-no-data-btn {
  border: 1px solid #5ee495;
  border-radius: 4px;
  color: #5ee495;
  padding: 9px 20px;
  font-size: 14px;
  line-height: 14px;
  width: 100px;
  margin: 0 auto;
}

.icon-loading {
  animation: loadingWhite 1.2s infinite linear;
  animation-timing-function: steps(10);
}

.btn-primary {
  background-image: linear-gradient(90deg, #5ee495 0%, #2ad5f3 100%);
  box-shadow: 0 4px 16px 0 rgba(164, 175, 191, 0.30);
  border-radius: 4px;
  font-size: 16px;
  color: #fff;
  line-height: 16px;
  padding: 14px 30px;
  text-align: center;
  box-sizing: border-box;
}

.btn-ghost {
  border: 1px solid #2ad5f3;
  border-radius: 4px;
  color: #2ad5f3;
  padding: 8px;
  text-align: center;
  font-size: 14px;
  box-sizing: border-box;
  line-height: 14px;
  display: inline-block;
}


.text-ellipsis{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
  display: inline-block;
}

.text-ellipsis-line2 {
  text-overflow: ellipsis;
  overflow: hidden;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient:vertical;
}

@keyframes loadingWhite {
  0% {
    background-position: 0 0;
  }

  100% {
    background-position: -500rpx 0;
  }
}
